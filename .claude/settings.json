{
  "permissions": {
    "allow": [
      "Bash(git commit:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write(*.tsx)|Write(*.ts)|Edit(*.tsx)|Edit(*.ts)",
        "hooks": [
          {
            "type": "command",
            "command": "npx eslint --fix {{PATH}} 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
